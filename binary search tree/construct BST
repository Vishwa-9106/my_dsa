class Solution {
    int idx = 0;
    public TreeNode build(int[] preorder, long x,long y){
        if(idx >= preorder.length || preorder[idx] < x || preorder[idx] > y) return null;
        TreeNode root = new TreeNode(preorder[idx]);
        idx++;
        root.left = build(preorder,x,root.val);
        root.right = build(preorder,root.val,y);
        return root;
    }
    public TreeNode bstFromPreorder(int[] preorder) {
        return build(preorder,Long.MIN_VALUE,Long.MAX_VALUE);
    }
}