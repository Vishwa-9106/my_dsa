class Solution {
    public boolean isValidBSTHelper(TreeNode root,long x ,long y) {
        if (root==null) return true;
        return (root.val>x &&  root.val<y) && isValidBSTHelper(root.left,x,root.val) && isValidBSTHelper(root.right,root.val,y);
    }
    public boolean isValidBST(TreeNode root) {
        return isValidBSTHelper(root,Long.MIN_VALUE,Long.MAX_VALUE);
    }
}